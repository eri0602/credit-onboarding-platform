---
import { SignIn } from 'auth-astro/components';
---

<section
    class="flex flex-col items-center justify-center min-h-[calc(100vh-60px)] p-4"
>
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-8">
        <div class="flex justify-center mb-6">
            <a
                href="/"
                class="flex items-center space-x-2 text-[#111827] font-bold text-xl"
            >
                <svg
                    width="33"
                    height="33"
                    viewBox="0 0 33 33"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M16.5 0.5L32.5 16.5L16.5 32.5L0.5 16.5L16.5 0.5ZM14.8333 23.8333V9.16667L7.16667 16.5L14.8333 23.8333Z"
                        fill="#1173D4"></path>
                </svg>
                <span>FinanciaPro</span>
            </a>
        </div>

        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-[#111827] mb-1">
                Bienvenido de nuevo
            </h1>
            <p class="text-sm text-[#111827]">
                Inicia sesión para acceder a tu cuenta.
            </p>
        </div>

        <form
            method="POST"
            class="space-y-4"
            onsubmit="handleLogin(event)"
        >
            <input
                id="email"
                type="email"
                placeholder="Correo electrónico"
                required
                class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
            />

            <input
                id="password"
                type="password"
                placeholder="Contraseña"
                required
                class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
            />

            <button
                type="submit"
                class="w-full mt-6 bg-[#1173D4] hover:bg-blue-700 text-white font-semibold py-3 rounded-md transition duration-300 shadow-md hover:shadow-lg"
            >
                Iniciar Sesión
            </button>
        </form>

        <SignIn
            provider="google"
            class="w-full bg-white border border-gray-300 rounded-md py-3 flex items-center justify-center text-sm font-medium text-[#111827] hover:bg-gray-100 transition duration-150 mt-4"
        >
            <img
                src="/assets/google-icon.svg"
                alt="Google Icon"
                class="h-5 w-5 mr-2"
            />
            Iniciar sesión con Google
        </SignIn>

        <script>
            async function handleLogin(event: Event) {
                event.preventDefault();

                const emailInput = document.getElementById('email') as HTMLInputElement | null;
                const passwordInput = document.getElementById('password') as HTMLInputElement | null;

                if (!emailInput || !passwordInput) {
                    alert('Por favor, completa todos los campos.');
                    return;
                }

                const email = emailInput.value;
                const password = passwordInput.value;

                try {
                    const response = await fetch('http://localhost:8080/api/auth/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ email, password }),
                    });

                    if (!response.ok) {
                        throw new Error('Credenciales inválidas');
                    }

                    const data = await response.json();

                    // Almacenar el token o manejar la sesión según sea necesario
                    localStorage.setItem('token', data.token);

                } catch (error) {
                    if (error instanceof Error) {
                        alert(error.message);
                    } else {
                        alert('Ocurrió un error inesperado.');
                    }
                }
            }
        </script>

        <div class="flex justify-between items-center mt-6 text-sm">
            <div class="flex items-center">
                <input
                    id="remember-me"
                    name="remember-me"
                    type="checkbox"
                    class="h-4 w-4 text-[#1173D4] border-gray-300 rounded focus:ring-blue-500"
                />
                <label
                    for="remember-me"
                    class="ml-2 text-[#111827] select-none cursor-pointer"
                >
                    Recuérdame
                </label>
            </div>
            <a href="#" class="text-[#1173D4] hover:text-[#111827] font-medium">
                ¿Olvidaste tu contraseña?
            </a>
        </div>

        <div class="text-center mt-6 text-sm">
            <p class="text-[#111827]">
                ¿No tienes una cuenta? 
                <a
                    href="/register"
                    class="text-[#1173D4] hover:text-[#111827] font-medium"
                    >Regístrate</a
                >
            </p>
        </div>
    </div>
</section>
