// import { SignIn } from 'auth-astro/components'; 
---

<section
    class="flex flex-col items-center justify-center min-h-[calc(100vh-60px)] p-4"
>
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-8">
        <div class="flex justify-center mb-6">
            <a
                href="/"
                class="flex items-center space-x-2 text-[#111827] font-bold text-xl"
            >
                <svg
                    width="33"
                    height="33"
                    viewBox="0 0 33 33"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M16.5 0.5L32.5 16.5L16.5 32.5L0.5 16.5L16.5 0.5ZM14.8333 23.8333V9.16667L7.16667 16.5L14.8333 23.8333Z"
                        fill="#1173D4"></path>
                </svg>
                <span>FinanciaPro</span>
            </a>
        </div>

        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-[#111827] mb-1">
                Bienvenido de nuevo
            </h1>
            <p class="text-sm text-[#111827]">
                Inicia sesión para acceder a tu cuenta.
            </p>
            <p id="message" class="mt-2 text-sm font-medium"></p>
        </div>

        <form
            id="login-form"
            method="POST"
            class="space-y-4"
        >
            <input
                id="email"
                name="email" 
                type="email"
                placeholder="Correo electrónico"
                required
                class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
            />

            <input
                id="password"
                name="password"
                type="password"
                placeholder="Contraseña"
                required
                class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
            />

            <button
                type="submit"
                id="login-button"
                class="w-full mt-6 bg-[#1173D4] hover:bg-blue-700 text-white font-semibold py-3 rounded-md transition duration-300 shadow-md hover:shadow-lg"
            >
                Iniciar Sesión
            </button>
        </form>

        <div class="flex justify-between items-center mt-6 text-sm">
            <div class="flex items-center">
                <input
                    id="remember-me"
                    name="remember-me"
                    type="checkbox"
                    class="h-4 w-4 text-[#1173D4] border-gray-300 rounded focus:ring-blue-500"
                />
                <label
                    for="remember-me"
                    class="ml-2 text-[#111827] select-none cursor-pointer"
                >
                    Recuérdame
                </label>
            </div>
            <a href="#" class="text-[#1173D4] hover:text-[#111827] font-medium">
                ¿Olvidaste tu contraseña?
            </a>
        </div>

        <div class="text-center mt-6 text-sm">
            <p class="text-[#111827]">
                ¿No tienes una cuenta?
                <a
                    href="/register"
                    class="text-[#1173D4] hover:text-[#111827] font-medium"
                    >Regístrate</a
                >
            </p>
        </div>
    </div>
</section>

<script>
    const API_LOGIN_URL = 'http://localhost:8080/api/usuarios/login';
    const REDIRECT_URL = '/application'; 

    const messageElement = document.getElementById('message');
    const loginButton = document.getElementById('login-button') as HTMLButtonElement | null;
    const formElement = document.getElementById('login-form') as HTMLFormElement | null;
    const emailInput = document.getElementById('email') as HTMLInputElement | null;
    const passwordInput = document.getElementById('password') as HTMLInputElement | null;

    function displayMessage(text: string, isError: boolean = false): void {
        if (messageElement) {
            messageElement.textContent = text;
            messageElement.className = isError 
                ? 'mt-2 text-sm font-medium text-red-600' 
                : 'mt-2 text-sm font-medium text-green-600';
        }
    }

    function restoreButton(): void {
        if (loginButton) {
            loginButton.disabled = false;
            loginButton.textContent = 'Iniciar Sesión';
        }
    }

        /**
     * @function checkAndRedirectIfLoggedIn
     * Verifica la existencia de un token en localStorage y redirige.
     */
    function checkAndRedirectIfLoggedIn(): void {
        const token = localStorage.getItem('authToken');
        if (token) {
            // Se encontró un token, asumimos que la sesión está activa y redirigimos.
            // NOTA: Para máxima seguridad, este token debería validarse en el backend.
            console.log('Token encontrado, redirigiendo...');
            window.location.replace(REDIRECT_URL); 
        } else {
            console.log('No se encontró token, permanecer en la página de login.');
        }
    
        checkAndRedirectIfLoggedIn();
    }

    async function handleLogin(event: Event) {
        event.preventDefault();

        if (!loginButton || !emailInput || !passwordInput) {
            displayMessage('Error interno: Faltan elementos críticos del formulario.', true);
            return;
        }

        loginButton.disabled = true;
        loginButton.textContent = 'Verificando...';
        displayMessage('Verificando credenciales...', false);

        const email = emailInput.value;
        const password = passwordInput.value;

        try {
            const response = await fetch(API_LOGIN_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password }),
            });

            if (response.ok) {
                const data = await response.json();
                
                // VERIFICAR NOMBRE DEL CAMPO: 'token', 'jwt', o 'accessToken'
                const token = data.token || data.jwt || data.accessToken; 

                if (token) {
                    localStorage.setItem('authToken', token);
                    displayMessage('Inicio de sesión exitoso. Redirigiendo...', false);
                    
                    setTimeout(() => {
                        window.location.href = REDIRECT_URL;
                    }, 800); 
                } else {
                    displayMessage('Inicio de sesión exitoso, pero no se recibió el token de seguridad.', true);
                    restoreButton();
                }

            } else {
                let errorMessage = 'Credenciales incorrectas o usuario no encontrado.';
                try {
                    const errorData = await response.json();
                    errorMessage = errorData.message || errorData.error || errorMessage;
                } catch (e) {
                    errorMessage = `Error ${response.status}: ${response.statusText}`;
                }
                
                displayMessage(`Error de autenticación: ${errorMessage}`, true);
                restoreButton();
            }

        } catch (error) {
            console.error('Login network error:', error);
            displayMessage('Error de conexión. ¿Está corriendo la API en http://localhost:8080?', true);
            restoreButton();
        }
    }

    // El Event Listener se añade aquí
    if (formElement) {
        formElement.addEventListener('submit', handleLogin);
    }
</script>