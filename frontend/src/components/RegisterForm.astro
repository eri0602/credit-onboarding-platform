<section
    class="flex flex-col items-center justify-center min-h-[calc(100vh-60px)] p-4"
>
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-8">
        <div class="flex justify-center mb-6">
            <a
                href="/"
                class="flex items-center space-x-2 text-[#111827] font-bold text-xl"
            >
                <svg
                    width="33"
                    height="33"
                    viewBox="0 0 33 33"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M16.5 0.5L32.5 16.5L16.5 32.5L0.5 16.5L16.5 0.5ZM14.8333 23.8333V9.16667L7.16667 16.5L14.8333 23.8333Z"
                        fill="#1173D4"></path>
                </svg>
                <span>FinanciaPro</span>
            </a>
        </div>

        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-[#111827] mb-1">
                Crea tu cuenta
            </h1>
            <p class="text-sm text-[#111827]">
                Comienza a agilizar tus solicitudes de crédito.
            </p>
            <p id="message" class="mt-2 text-sm font-medium"></p>
        </div>

        <form id="register-form" onsubmit="handleRegister(event)">
            <div class="space-y-4">
                <input
                    name="companyName"
                    type="text"
                    placeholder="Nombre de la empresa"
                    required
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
                />

                <input
                    name="cifNif"
                    type="text"
                    placeholder="CIF/NIF"
                    required
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
                />

                <input
                    name="email"
                    type="email"
                    placeholder="Correo electrónico"
                    required
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
                />

                <input
                    name="password"
                    type="password"
                    placeholder="Contraseña"
                    required
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 transition duration-150 text-sm"
                />
            </div>

            <button
                type="submit"
                id="register-button"
                class="w-full mt-6 bg-[#1173D4] hover:bg-blue-700 text-white font-semibold py-3 rounded-md transition duration-300 shadow-md hover:shadow-lg"
            >
                Registrarse
            </button>
        </form>

        <div class="text-center mt-6 text-sm">
            <p class="text-[#111827]">
                ¿Ya tienes una cuenta?
                <a
                    href="/login"
                    class="text-[#1173D4] hover:text-[#111827] font-medium"
                    >Inicia sesión</a
                >
            </p>
        </div>
    </div>
</section>

<script>
    // URL de tu API de Spring Boot
    const API_REGISTER_URL = 'http://localhost:8080/api/usuarios/registro/cliente'; 
    const REDIRECT_URL = '/application';

    const messageElement = document.getElementById('message');
    // CORRECCIÓN TS: Usamos 'as HTMLButtonElement | null' para acceder a .disabled
    const registerButton = document.getElementById('register-button') as HTMLButtonElement | null; 

    // CORRECCIÓN TS: Tipado explícito de parámetros
    function displayMessage(text: string, isError: boolean = false): void {
        if (messageElement) {
            messageElement.textContent = text;
            messageElement.className = isError 
                ? 'mt-2 text-sm font-medium text-red-600' 
                : 'mt-2 text-sm font-medium text-green-600';
        }
    }


        /**
     * @function checkAndRedirectIfLoggedIn
     * Verifica la existencia de un token en localStorage y redirige.
     */
    function checkAndRedirectIfLoggedIn(): void {
        const token = localStorage.getItem('authToken');
        if (token) {
            // Se encontró un token, asumimos que la sesión está activa y redirigimos.
            // NOTA: Para máxima seguridad, este token debería validarse en el backend.
            console.log('Token encontrado, redirigiendo...');
            window.location.replace(REDIRECT_URL); 
        }
    }

    checkAndRedirectIfLoggedIn();

    async function handleRegister(event: Event): Promise<void> {
        event.preventDefault();
        
        // Comprobar si el botón existe antes de intentar deshabilitarlo
        if (!registerButton) return;

        registerButton.disabled = true;
        displayMessage('Registrando...', false);

        const form = event.currentTarget as HTMLFormElement;
        const formData = new FormData(form);
        
        // Mapeo de los campos a un objeto JSON
        const data = {
            email: formData.get('email'),
            password: formData.get('password'),
            nombre: "nuevo",
            rfc: formData.get('cifNif'),
            razonSocial: formData.get('companyName'),
        };

        try {
            const response = await fetch(API_REGISTER_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                displayMessage('¡Registro exitoso! Redirigiendo a Iniciar Sesión...', false);
                setTimeout(() => {
                    window.location.href = '/login'; 
                }, 1500);
            } else {
                // Intenta leer el mensaje de error del servidor
                const errorData = await response.json().catch(() => ({ message: response.statusText }));
                displayMessage(`Error en el registro: ${errorData.message || 'Inténtalo de nuevo.'}`, true);
                registerButton.disabled = false;
            }
        } catch (error) {
            // Error de red (Spring Boot no está corriendo o CORS incorrecto)
            console.error('Network or server error:', error);
            displayMessage('Error de conexión. Asegúrate que la API está funcionando (http://localhost:8080).', true);
            registerButton.disabled = false;
        }
    }

    // Listener de evento, recomendado para Astro
    const formElement = document.getElementById('register-form');
    if (formElement) {
        formElement.addEventListener('submit', handleRegister);
    }
</script>